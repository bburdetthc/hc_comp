SELECT
	T.TABLE_SCHEMA, T.TABLE_NAME, T.TABLE_OWNER, T.TABLE_TEXT, X.COLUMN_TEXT, NUMBER_ROWS, LAST_CHANGE_TIMESTAMP
FROM
	(select DISTINCT TABLE_NAME, TABLE_SCHEMA, COLUMN_TEXT from QSYS2.SYSCOLUMNS WHERE TABLE_SCHEMA = 'LGDAT' AND COLUMN_Text LIKE '%Batch%') X
	INNER JOIN QSYS2.SYSTABLES T ON
		X.TABLE_NAME = T.TABLE_NAME AND
		X.TABLE_SCHEMA = T.TABLE_SCHEMA
	INNER JOIN QSYS2.SYSTABLESTAT S ON
		S.TABLE_SCHEMA = X.TABLE_SCHEMA AND
		S.TABLE_NAME = X.TABLE_NAME
WHERE
	TABLE_TYPE = 'P' AND
	NUMBER_ROWS <> 0