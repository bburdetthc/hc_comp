SELECT
	FHCOM#, FHBANK, FHVEN#, BTNAME, DIGITS(FHPYY)||DIGITS(FHPPER) AS PERIOD, FHVCH# AS VOUCHER, IDINV# AS INVOICE, FHCBAL AS AMOUNT
FROM
	LGDAT.OPEN
	LEFT OUTER JOIN LGDAT.VEND ON
		BTVEND = FHVEN#
	LEFT OUTER JOIN LGDAT.VCHR ON
		IDVCH# = FHVCH# AND
		IDCOM# = FHCOM# AND
		IDBNK# = FHBANK AND
		IDFISY = FHPYY AND
		IDFISP = FHPPER
WHERE
	FHCBAL <> 0 AND
	FHVEN# = '00124525'