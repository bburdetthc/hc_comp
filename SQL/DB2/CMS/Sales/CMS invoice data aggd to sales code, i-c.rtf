SELECT
	DHCOMP, BVCOMP,  DIGLCD, A30, DHINCR, COUNT(DILIN#) AS NUMBER_LINES, SUM(DIEXTN) AS SUM_EXTN
FROM
	LGDAT.OIH
	LEFT OUTER JOIN LGDAT.OID ON
		DIINV# = DHINV#
	LEFT OUTER JOIN LGDAT.CODE ON
		A2 = 'EE' AND
		LTRIM(RTRIM(A9)) = DIGLCD
	LEFT OUTER JOIN LGDAT.CUST ON
		BVCUST = DHBCS#
WHERE
	DHARYR = 13
GROUP BY
	DHCOMP, BVCOMP, DIGLCD, A30, DHINCR
ORDER BY 
	DIGLCD