select 
	BYPART, BYACTN, BYQTY, BYTDAT, BYJREF, BYIREF, BYDREF, BYSEQ#, COALESCE(CGSTCS, CHSTCS, Y0STCS) AS COST,
	COALESCE(CGSTCS, CHSTCS, Y0STCS)*BYQTY*CASE BYACTN WHEN 'I' THEN -1 ELSE 1 END AS XCOST
from
	lgdat.stkt 
	LEFT OUTER JOIN LGDAT.ICSTM ON
		CGPART = BYPART AND
		CGPLNT = BYPLNT
	LEFT OUTER JOIN LGDAT.ICSTP ON
		CHPART = BYPART AND 
		CHPLNT = BYPLNT
	LEFT OUTER JOIN LGDAT.ICSTR ON
		Y0PART = BYPART AND
		Y0PLNT = BYPLNT
where 
	byfsyy = 2013 and 
	byfspr = 4 and 
	byplnt = '152'  and 
	BYSRC = 'PD ' and 
	BYJREF = 'X007234181'