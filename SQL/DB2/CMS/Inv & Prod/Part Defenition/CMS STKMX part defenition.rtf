SELECT
	COALESCE(AVPART, AWPART) AS PART,
	COALESCE(AVDES1, AWDES1) AS DESCR,
	COALESCE(AVMAJG, AWMAJG) AS MAJG,
	COALESCE(AVMING, AWMING) AS MING,
	BRDES
FROM
	LGDAT.STKA
	LEFT OUTER JOIN LGDAT.STKMM ON
		AVPART = V6PART
	LEFT OUTER JOIN LGDAT.STKMP ON
		AWPART = V6PART
	LEFT OUTER JOIN LGDAT.MMGP ON
		BRGRP = COALESCE(AVMAJG, AWMAJG) AND
		BRMGRP = COALESCE(AVMING, AWMING)
WHERE
	V6PART = 'R00G35G1600'