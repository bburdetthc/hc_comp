SELECT
 	*
FROM
	(
	SELECT
		BQ1LVL AS HLVL, BQ1GRP AS GRP, REPEAT(' ',LENGTH(LTRIM(RTRIM(BQ1GRP))))||BQ1TITL AS DESCR
	FROM
 		LGDAT.FGRP
	WHERE
 		BQ1COMP = ''

	UNION ALL

	SELECT
 		 'R' AS HLVL, SUBSTR(A7,7,1) AS GRP,
 		RTRIM(SUBSTR(A249,1,25)) AS DESCR
	FROM
 		LGDAT.NAME
	WHERE
 		SUBSTR(A7,1,1) = 'A'
	) X
ORDER BY 
	X.GRP