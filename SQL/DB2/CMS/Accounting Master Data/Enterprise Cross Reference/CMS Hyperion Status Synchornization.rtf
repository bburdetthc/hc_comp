SELECT 
	DIGITS(AZCOMP)||DIGITS(AZGL#1)||DIGITS(AZGL#2) AS ACCT, AZTITL, AZSTAT, CASE HYPOLD WHEN 'INACTIVE' THEN 'I' ELSE '' END AS HYPSTAT,
	CASE WHEN AZSTAT = 'I' THEN 'A' ELSE 'I' END AS STAT_UPDATE_TO
FROM 
	LGDAT.MAST 
	INNER JOIN LGPGM.CMSTOHYP ON
		CMSGL = DIGITS(AZCOMP)||DIGITS(AZGL#1)||DIGITS(AZGL#2) 
WHERE
	CASE HYPOLD WHEN 'INACTIVE' THEN 'I' ELSE '' END <> AZSTAT
FETCH FIRST 100 ROWS ONLY