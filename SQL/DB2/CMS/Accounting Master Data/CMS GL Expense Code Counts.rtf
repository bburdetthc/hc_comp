SELECT
	COALESCE(AVGLED, AWGLED), A30, V6STAT, V6PLNT,  COUNT(V6PART)
FROM
	LGDAT.STKA
	LEFT OUTER JOIN LGDAT.STKMM ON
		AVPART = V6PART
	LEFT OUTER JOIN LGDAT.STKMP ON
		AWPART = V6PART
	LEFT OUTER JOIN LGDAT.CODE ON
		LTRIM(RTRIM(A9)) = COALESCE(AVGLED, AWGLED) AND
		A2 = 'GE'
WHERE
	COALESCE(AVGLED, AWGLED) IS NOT NULL
GROUP BY
	COALESCE(AVGLED, AWGLED), A30, V6STAT, V6PLNT
ORDER BY 
	COALESCE(AVGLED, AWGLED)